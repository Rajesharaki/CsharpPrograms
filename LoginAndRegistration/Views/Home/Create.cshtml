@model User
<div class="col-2">
    <h1 class="bg-info text-center">Fill the User details...!</h1>
</div>
<div class="container col-md-offset-2">
    <div class="row">
        <form asp-action="Creating" class="form-control" method="get">
            <div class="col-5 bg-info">
                <label asp-for="ID" class="col-2"></label>
                <input asp-for="ID" class="col-3" />
            </div>
            <div class="col-5 bg-info">
                <label asp-for="Name" class="col-2"></label>
                <input asp-for="Name" class="col-3" />
            </div>
            <div class="col-5 bg-info">
                <label asp-for="Email" class="col-2"></label>
                <input asp-for="Email" class="col-3" />
            </div>
            <div class="col-5">
                <input class="btn btn-success center-block" type="submit" />
            </div>
        </form>
    </div>
</div>